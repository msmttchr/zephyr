/dts-v1/;
#include <st/bluenrg/bluenrg_lp.dtsi>
#include "steval_idb011v2-pinctrl.dtsi"

/ {
	model = "STMicroelectronics BLUENRG_LP-STEVAL_IDB011V2 board";
	compatible = "st,bluenrg_lp-steval_idb011v2";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
	};
};

&clk_hse {
	hse-bypass;
	clock-frequency = <DT_FREQ_M(8)>; /* STLink 8MHz clock */
	status = "okay";
};

&pll {
	clocks = <&clk_hse>;
	mul = <8>;
	div = <2>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(32)>;
	ahb-prescaler = <1>;	//Sur LP, il n'y a pas de prescaler associ√© aux bus ahb, apb donc on divise par 1
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

&usart1 {
	pinctrl-0 = <&usart_tx_pa9 &usart_rx_pa8>;
	pinctrl-names="default";
	current-speed = <115200>;
	status = "okay";
};


