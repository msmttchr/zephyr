source "Kconfig.zephyr"

menu "UART mux"

config UART_MUX
    bool "Enable UART multiplexer"
    depends on UART_ASYNC_API
    default y

config UART_MUX_RX_BUF_SIZE
	int "UART mux RX payload buffer size"
	range 64 4096
	default 512
	depends on UART_MUX
	help
	  Maximum payload size supported by the UART mux.
	  Must be large enough for the largest virtual UART packet.

config UART_MUX_PHY_RX_BUF_SIZE
	int "UART mux physical RX buffer size"
	range 32 256
	default 64
	depends on UART_MUX
	help
	  Size of the physical UART async RX buffer.
	  This is NOT the frame payload buffer.

endmenu

config UART_MUX_TEST
	bool "UART mux test application"
	default y

config TEST_BLE_EVENT_PERIOD_MS
	int "Protocol A event period (ms)"
	default 500

config TEST_OT_EVENT_PERIOD_MS
	int "Protocol B event period (ms)"
	default 1000

config TEST_SYS_PERIOD_MS
	int "System heartbeat period (ms)"
	default 2000

